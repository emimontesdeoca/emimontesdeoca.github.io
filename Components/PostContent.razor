@inject IConfiguration Configuration

<PageTitle>@Data?.Title → by Emiliano Montesdeoca</PageTitle>

<div style="@GetDisplayStyle">
    <h4 class="post-content-date">
        @Data?.Date
    </h4>
    <h1 class="post-content-title">
        @Data?.Title
    </h1>

    <div id="markdown">
        @((MarkupString) MarkdownContent)
    </div>

    @if (Loaded)
    {
        <div id="after-post" class="after-post" style="@GetDisplayStyle">
            <p>Share on <a target="_blank" href="@GetTwitterUrl">Twitter</a> · Edit this on <a target="_blank" href="@GetEditUrl">Github</a></p>
        </div>

        <p class="footer">Opinions and ideas are my own · A Personal blog by <a href="@Configuration["Socials:Twitter"]">Emiliano Montesdeoca</a></p>
    }
</div>
