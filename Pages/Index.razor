@page "/{path?}"
@inject IConfiguration Configuration

@if (string.IsNullOrEmpty(this.Path))
{
    @foreach (var post in Posts.Where(x => x.Enabled))
    {
        <Blog.Components.PostItem Data=@post />
    }
}
else
{
    <Blog.Components.PostContent Data=@Post Content=@Content />
}

